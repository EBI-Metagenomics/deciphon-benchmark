workDir = "./work"

params {
    storageDir = "/hps/nobackup/rdf/metagenomics/research-team/horta/db"
    outputDir = "./output"
    hmmfile = "ftp://ftp.ebi.ac.uk/pub/databases/Pfam/releases/Pfam35.0/Pfam-A.hmm.gz"
    clanfile = "ftp://ftp.ebi.ac.uk/pub/databases/Pfam/releases/Pfam35.0/Pfam-C.gz"
    chunkSize = 1000
    seed = 98748
    downsampleCDS = 0
    domains = "archaea:20,bacteria:980"
    queueSize = 4000
    filterAcc = ".*"
    filterClan = ".*"
}

report.enabled = true

profiles {

    standard {
        process.executor = 'local'
    }

    lsf {
        process.executor = 'lsf'
        process.queue = 'research'
        process.perJobMemLimit = true

        executor.name = 'lsf'
        executor.queueSize = params.queueSize
        executor.pollInterval = '2 min'
        executor.queueStatInterval = '3 min'
        executor.dumpInterval = '8 min'
    }

    lsfQuick {
        process.executor = 'lsf'
        process.queue = 'short'
        process.perJobMemLimit = true

        executor.name = 'lsf'
        executor.queueSize = params.queueSize
        executor.pollInterval = '30 sec'
        executor.queueStatInterval = '1 min'
        executor.dumpInterval = '5 min'
    }
}
